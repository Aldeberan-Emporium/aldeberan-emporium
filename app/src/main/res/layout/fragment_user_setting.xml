<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/infoBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/user_settings_info"
        android:textSize="16sp"
        app:icon="@drawable/ic_user_alt_solid"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toTopOf="@+id/wishlistBtn"
        app:layout_constraintEnd_toEndOf="@+id/addressBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addressBtn"
        app:layout_constraintTop_toBottomOf="@+id/addressBtn" />

    <Button
        android:id="@+id/addressBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/user_settings_address"
        android:textSize="16sp"
        app:icon="@drawable/ic_map_marked_alt_solid"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toTopOf="@+id/infoBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/couponBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/user_settings_coupons"
        android:textSize="16sp"
        app:icon="@drawable/ic_ticket_alt_solid"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addressBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addressBtn"
        app:layout_constraintTop_toBottomOf="@+id/wishlistBtn" />

    <Button
        android:id="@+id/wishlistBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/user_settings_wishlist"
        android:textSize="16sp"
        app:icon="@drawable/ic_heart_solid"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toTopOf="@+id/couponBtn"
        app:layout_constraintEnd_toEndOf="@+id/addressBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addressBtn"
        app:layout_constraintTop_toBottomOf="@+id/infoBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>